{
  "name": "tap-and-stamp",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Tap & Stamp monorepo scaffolding",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "pnpm -r --filter './apps/*' --parallel dev",
    "build": "pnpm -r --filter './packages/*' build && pnpm -r --filter './apps/*' build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "coverage": "pnpm -r coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
